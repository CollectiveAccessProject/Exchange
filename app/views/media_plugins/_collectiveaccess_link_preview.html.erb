<%
    url = plugin_model.base_url + plugin_model.key

  if (size = media_size_for_version(version))
    puts size.inspect
    if (size['full'] == true)
      # TODO: maybe have it return in native resolution?
      url += "/full/!2000,2000/0/default.jpg"
      else
        url += "/full/!" + size[:width].to_s + "," + size[:height].to_s + "/0/default.jpg"
      end
  end

%>
<img
src="<%= url %>"
<% if width %> width="<%= width %>" <% end %>
<% if height %> height="<%= height %>" <% end %>
/>

