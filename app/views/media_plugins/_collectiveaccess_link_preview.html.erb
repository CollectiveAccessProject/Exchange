<%
zoom = false if zoom.nil?
if !zoom 
%>
<%=
  size = media_size_for_version(version)
  image_tag plugin_model.media_file.thumbnail.thumb(size[:area]).url, alt: plugin_model.media_file.alt_text, title: plugin_model.media_file.alt_text if (defined? plugin_model.media_file.thumbnail.stored? && plugin_model.media_file.thumbnail.stored?)
%>
<%
else
%>
 <div id="collimage_<%= plugin_model.media_file.id %>" class="zoomablePanel"></div>
 <script>
  jQuery(document).ready(function() {
	let map;
	let path = '<%= riiif_info_path(plugin_model.media_file) %>';
	map = L.map('collimage_<%= plugin_model.media_file.id %>', {
		  center: [0, 0],
		  crs: L.CRS.Simple,
		  zoom: 2,
		  attributionControl: false,
	  });
	  L.tileLayer.iiif(path).addTo(map);
	  map.invalidateSize();
  });
</script>
<%
	end
%>