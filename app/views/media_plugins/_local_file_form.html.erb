<div class="panel panel-primary">
  <div class="panel-body">
    <%= fields_for(plugin_model) do |f| %>

        <label for="localMedia">Local file:</label>
      <%= f.file_field :file, class: "form-control", id: "localMedia"  %>

    <div class="form-actions">
      <% if plugin_model.id %>
        <%= link_to 'Delete?', plugin_model, method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
    </div>
    <% end %>
  </div>
</div>
