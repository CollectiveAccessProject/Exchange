<div class="panel panel-primary">
  <div class="panel-body">
    <%= simple_form_for(plugin_model) do |f| %>
    <%= f.error_notification %>

      <%= f.input :original_link %>

    <div class="form-actions">
      <% if plugin_model.id %>
        <%= link_to 'Delete?', plugin_model, method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
      <%= f.button :submit %>
    </div>
    <% end %>
  </div>
</div>
