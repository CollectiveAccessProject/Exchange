<div class="panel panel-primary">
  <div class="panel-body">
    <%= fields_for(plugin_model) do |f| %>

        <label for="googledocsMedia">Google Docs URL:</label>
        <%= f.text_field :original_link, class: "form-control", "id": "googledocsMedia" %>

    <div class="form-actions">
      <% if plugin_model.id %>
        <%= link_to 'Delete?', plugin_model, method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
    </div>
    <% end %>
  </div>
</div>
