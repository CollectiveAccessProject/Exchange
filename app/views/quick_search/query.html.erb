<div class="row">
  <div class="col-md-12">
    <% if((@collections.length == 0) && (@resources.length == 0) && (@collection_objects.length == 0) && (@exhibitions.length == 0)) %>
        <h2>No results found for <em><%= sanitize(@query) %></em></h2>
    <% else %>
        <h2>Results for <em><%= sanitize(@query) %></em></h2>
    <% end %>
  </div>
</div>
  <% if(@collections.length > 0) %>
      <div class="row">
        <div class="col-sm-12">
          <a href="#" onClick="$('#collectionsResultsContainer').toggle(); return false;" class="btn btn-noBg btn-lg pull-right" style="margin-top:-6px;"><i class="fa fa-arrows-v" aria-hidden="true"></i></a>
          <h4><%= @collections.length %> Learning Collection<%= (@collections.length == 1) ? "" : "s" %></h4>
        </div>
      </div>
      <div class="row" id="collectionsResultsContainer">
		<div class="col-sm-12">
          <%= render :partial => "quick_search/collection_results" %>
        </div>
      </div>
  <% end %>
  <% if(@resources.length > 0) %>
      <div class="row">
        <div class="col-sm-12">
          <a href="#" onClick="$('#resourceResultsContainer').toggle(); return false;" class="btn btn-noBg btn-lg pull-right" style="margin-top:-6px;"><i class="fa fa-arrows-v" aria-hidden="true"></i></a>
          <h4><%= @resources.length %> Resource<%= (@resources.length == 1) ? "" : "s" %></h4>
        </div>
      </div>
      <div class="row" id="resourceResultsContainer">
      	<div class="col-sm-12">
          <%= render :partial => "quick_search/resource_results" %>
      	</div>
      </div>
  <% end %>
  <% if(@exhibitions.length > 0) %>
      <div class="row">
        <div class="col-sm-12">
          <a href="#" onClick="$('#exhibitionResultsContainer').toggle(); return false;" class="btn btn-noBg btn-lg pull-right" style="margin-top:-6px;"><i class="fa fa-arrows-v" aria-hidden="true"></i></a>
          <h4><%= @exhibitions.length %> UMMA Exhibition<%= (@exhibitions.length == 1) ? "" : "s" %></h4>
        </div>
      </div>
      <div class="row" id="exhibitionResultsContainer">
		<div class="col-sm-12">
          <%= render :partial => "quick_search/exhibition_results" %>
        </div>
      </div>
  <% end %>
  <% if(@collection_objects.length > 0) %>
      <div class="row">
        <div class="col-sm-12">
          <a href="#" onClick="$('#colObjectResultsContainer').toggle(); return false;" class="btn btn-noBg btn-lg pull-right" style="margin-top:-6px;"><i class="fa fa-arrows-v" aria-hidden="true"></i></a>
          <h4><%= @collection_objects.length %> UMMA Collection Object<%= (@collection_objects.length == 1) ? "" : "s" %></h4>
        </div>
      </div>
      <div class="row" id="colObjectResultsContainer">
      	<div class="col-sm-12">
          <%= render :partial => "quick_search/collection_object_results" %>
      	</div>
      </div>
  <% end %>