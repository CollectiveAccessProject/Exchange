<% thumb = false %>
<div class="col-md-3 qsResult">
	<% if result.cover %>
		<% thumb = true %>
		<%= link_to(image_tag(result.cover.thumb("200x200").url), get_resource_view_path(result[:id], user_signed_in?)) %>
	<% else %>
		<% if result.resource_type_as_sym == :collection_objects %>
			<% result.media_files.each do |f| %>
				<% if f.sourceable %>
					<%= link_to (f.sourceable.preview :thumbnail), get_resource_view_path(result[:id], user_signed_in?) %><br/>
					<% thumb = true %>
					<% break %>
				<% end %>
			<% end %>
		<% elsif result.resource_type_as_sym == :collections %>
			<% if(result.resource_hierarchies.count) %>
				<% result.resource_hierarchies.each do |rel| %>
					<% if(rel.child_resource.is_resource) %>
						<% rel.child_resource.media_files.each do |f| %>
							<% if f.sourceable %>
								<% if f.access == 1 %>
									<%= link_to (f.sourceable.preview :thumbnail), get_resource_view_path(rel.resource_id, user_signed_in?) %><br/>
									<% thumb = true %>
									<% break %>
								<% end %>
							<% end %>
						<% end %>
						<% if(thumb == true) %>
							<% break %>
						<% end %>
					<% end %>
				<% end %>
			<% end %>
		<% elsif result.resource_type_as_sym == :resources %>
			<% result.media_files.each do |f| %>
			<% if f.sourceable %>
				<% if f.access == 1 %>
					<%= link_to (f.sourceable.preview :thumbnail), get_resource_view_path(result[:id], user_signed_in?), class: "qsResultThumb" %><br/>
					<% thumb = true %>
					<% break %>
				<% end %>
			<% end %>
		<% end %>
		<% end %>
	<% end %>
	<% if(thumb == false) %>
		<%= link_to '<i class="fa fa-picture-o fa-5x fa-align-center thumbPlaceholder" aria-hidden="true"></i>'.html_safe, get_resource_view_path(result, user_signed_in?) %><br/>
	<% end %>
	<div class="text-left qsResultText">
		<div class="small"><%= sanitize(result.get_collection_object_field('artist')) %> <%= sanitize(result.get_collection_object_field('artist_nationality', { enclose_in_parens: true})) %></div>
		<span class="welcomeResultType"><%= result.resource_type_for_display(false, true) %>:</span>
		<%= link_to sanitize(result[:title], tags: %w(strong em a font b sup sub u), attributes: %w(href style)), get_resource_view_path(result[:id], user_signed_in?) %>
		<div class="qsMoreCaption">
			<div class="small"><%= result.get_collection_object_field('date_created') %></div>
			<div class="small"><i><%= sanitize(result.get_collection_object_field('credit_line')) %></i></div>
			<div class="small text-left"><%= result.subtitle.html_safe %></div>
		</div>
	</div>
</div>