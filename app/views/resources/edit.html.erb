<!-- 
	Rendering Modal for Media File editing
	This is necessary to do outside of the media_list partial to avoid text editing fields from getting clipped
-->
<% @resource.media_files.each do |f| %>
    <% if f.sourceable %>
        <%
          begin
            media_display = f.sourceable.render :large
          rescue
            media_display = f.sourceable.preview :large, '', '', f.caption
          end
        %>
        <%= render partial: 'resources/media_file_render_overlay', locals: {media: media_display, media_id: f.id.to_s,  modal_id: f.sourceable.class.to_s + f.sourceable.id.to_s, editable: true} %>
    <% end %>
<% end %>
<!-- End media file modal -->
