<div class="row">

  <div class="col-md-6">
    <%= render 'form' %>
  </div>

  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4 class="">Related Media Files</h4>
      </div>
      <div class="panel-body">
        <% @resource.media_files.each do |f| %>
          <% if f.sourceable %>
            <div><%= f.sourceable.preview(300,180)  %></div>
          <% else %>
            <div><%= f.title  %></div>
          <% end %>
          <div style="float: right"><%= link_to('Edit', edit_media_file_path(f)) %></div>
          <hr />
        <% end %>
        <br />
        <%= link_to 'New Media File', '#new_media_file', 'data-toggle' => 'modal' %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <ul class="nav nav-tabs">
          <li class="active">
            <a data-toggle="tab" href="#media_files_form">Media</a>
          </li>
          <li>
            <a data-toggle="tab" href="#fooo">Foo</a>
          </li>
        </ul>

        <div class="tab-content">
          <div id="media_files_form" class="tab-pane fade in active">
            <p><%= render 'media_files/integrated_create_form' %></p>
          </div>
          <div id="fooo" class="tab-pane fade">
            <p>There's nothing here.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

