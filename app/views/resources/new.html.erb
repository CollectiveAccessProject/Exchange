<%= form_for :resource, url: resources_path do |f| %>
    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :subtitle %><br>
      <%= f.text_area :subtitle %>
    </p>
    <p>
      <%= f.label :slug %><br>
      <%= f.text_area :slug %>
    </p>

    <p>
      <%= f.submit %>
    </p>
<% end %>