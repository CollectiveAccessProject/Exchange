<div class="panel panel-primary">
  <div class="panel-body">
    <%= simple_form_for @resource do |f| %>
      <%= f.error_notification %>

      <%= f.input :resource_type, collection: Resource.resource_types, include_blank: false %>
      <%= f.input :title %>
      <%= f.input :subtitle %>
      <%= f.input :source_type %>
      <%= f.input :source %>
      <%= f.input :copyright_license, collection: Resource.license_types, include_blank: false %>
      <%= f.input :copyright_notes %>
      <%= f.input :access, as: :select, include_blank: false %>
      <%= f.button :submit %>
    <% end %>
  </div>
</div>
