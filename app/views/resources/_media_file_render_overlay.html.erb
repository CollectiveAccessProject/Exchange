					<script>
						$('body').on('click', '#scroll-right_<%= media_file.id %>', function(){
							$("#moResults_<%= media_file.id %>").animate({
								scrollLeft: "+=125px"
							}, "slow");
						});
					</script>
					<script>
						$('body').on('click', '#scroll-left_<%= media_file.id %>', function(){
							$("#moResults_<%= media_file.id %>").animate({
								scrollLeft: "-=125px"
							}, "slow");
						});
					</script>
				<div class="row">
					<div class="col-xs-1 related_scroll">
						<a id="scroll-left_<%= media_file.id %>" href="#" role="button">
							<i class="fa fa-arrow-circle-left" aria-hidden="true"></i>
							<span class="sr-only">Move Left</span>
						</a>
					</div>
					<div class="col-xs-10 moWrapper">	
						<div id="moResults_<%= media_file.id %>" class="moContainer">				
							<ul class="moResults">
			
			<%
							count = 0
							@resource.media_files.each do |af| 
				
								if af.sourceable
									if af.access == 1
										if af.sourceable.id.to_s == media_file.sourceable.id.to_s
											next
										else
											count = count + 1
			%>
											<li class="moRelated">
												<a href="#" data-dismiss="modal" data-toggle="modal" data-target="#<%= af.sourceable.class.to_s + af.sourceable.id.to_s %>">
												<%= af.sourceable.preview :thumbnail %>
												<small><%= media_file.title %></small> 
												</a>
											</li>
			<%
										end
									end
								end
							end
			%>
							</ul>
						</div>
					</div>	
					<div class="col-xs-1 related_scroll">
					<a id="scroll-right_<%= media_file.id %>" href="#" role="button">
						<i class="fa fa-arrow-circle-right" aria-hidden="true"></i>
						<span class="sr-only">Move Right</span>
					</a>
				</div>
				</div>
			<% end %>
