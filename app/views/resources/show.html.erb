<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @resource.title %>
</p>

<p>
  <strong>Subtitle:</strong>
  <%= @resource.subtitle %>
</p>


<p>
  <strong>Related media files:</strong>
  <ul>
    <% @resource.media_files.each do |f| %>
      <%= link_to(f.title, media_file_path(f))  %>
    <% end %>
  </ul>
</p>

<p>
  <strong>comments:</strong>
  <ul>
    <% @resource.comments.each do |c| %>
      <li><%= c.comment %>, by <i><%= c.user_name %></i></li>
    <% end %>
  </ul>

  <strong>tags:</strong>
  <ul>
    <% @resource.tags.each do |t| %>
      <li><%= t.tag %></li>
    <% end %>
  </ul>

</p>

<%= form_tag '/resources/add_new_comment' do %>
  <%= hidden_field_tag 'id', @resource.id %>
  <%= text_area_tag 'comment[comment]' %>
  <%= submit_tag 'Post Comment' %>
<% end %>

<%= form_tag '/resources/add_new_tag' do %>
  <%= hidden_field_tag 'id', @resource.id %>
  <%= text_area_tag 'tag[tag]' %>
  <%= submit_tag 'Add tag' %>
<% end %>

<%= link_to 'Edit', edit_resource_path(@resource) %> |
<%= link_to 'Back', resources_path %>
