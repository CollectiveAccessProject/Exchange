<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @media_file.title %>
</p>

<p>
  <strong>Source:</strong>
  <%= @media_file.source %>
</p>

<p>
  <strong>Media Original:</strong>
  <%= link_to "Download", @media_file.media.url %>
</p>

<p>
  <strong>Media properties:</strong>
  Name: <%= @media_file.media_file_name %>, Type: <%= @media_file.media_content_type %>, Updated at <%= @media_file.media_updated_at %>, File size: <%= @media_file.media_file_size %>
</p>

# @todo: this should be a model function along the lines of getMediaTag()
<% if /\Aimage\/.*\Z/ =~ @media_file.media_content_type %>
  <%= image_tag @media_file.media.url(:medium) %>
  <%= image_tag @media_file.media.url(:thumb) %>
<% elsif /\Avideo\/.*\Z/ =~ @media_file.media_content_type %>
  <%= video_tag @media_file.media.url, :size => '600x400', controls: true, autobuffer: true %>
<% end %>

<%= link_to 'Edit', edit_media_file_path(@media_file) %> |
<%= link_to 'Back', media_files_path %>
